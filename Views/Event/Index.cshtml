@{
    ViewData["Title"] = "Events";
}
<h1 style="font-size: 60px;">Events</h1>

<div class="container d-flex justify-content-center align-items-center" style="height: 50vh;"> @* This is a container that has boostrap styles that animate the buttons when they are hovered over.*@
    <div class="opt1 p-3 m-3">
        <a href="https://localhost:7266/Event/christmas" class="d-block">
            <img src="~/img/group.jpg" alt="Option 1" class="img-fluid">
        </a>
        <div class="text-center mt-1">
            <h2 style="color:red;">Christmas Deals</h2>
        </div>
    </div>
    <div class="opt2 p-3 mt-1">
        <a href="https://localhost:7266/Event/birthdays" class="d-block">
            <img src="~/img/tst1.jpg" alt="Option 2" class="img-fluid">
        </a>
        <div class="text-center mt-1">
            <h2 style="color:yellow;">Birthday Parties</h2>
        </div>
    </div>
    <div class="opt3 p-3 m-3">
        <a href="https://localhost:7266/Event/Business" class="d-block">
            <img src="~/img/tst2.jpg" alt="Option 3" class="img-fluid">
        </>
        <div class="text-center mt-1">
            <h2 style="color:black;">Business Bookings</h2>
        </div>
    </div>
</div>

<style>
    .opt1, .opt2, .opt3 {
        width: 33%;
        height: 50%;
        transition: transform 0.3s; /* Add smooth transition effect */
        position: relative; /* Add position property for absolute positioning of text */
    }

        .opt1:hover, .opt2:hover, .opt3:hover {
            transform: scale(1.1); /* Increase scale on hover */
        }

        .opt1 img, .opt2 img, .opt3 img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Maintain aspect ratio */
            margin-top: -150px;
        }

        .opt1 p, .opt2 p, .opt3 p {
            margin: 0;
        }

        .opt1 .text-center, .opt2 .text-center, .opt3 .text-center {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
        }
</style>
