
@{
    ViewData["Title"] = "Events";
}
<h1 style="font-size:60px;">Events</h1>

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="opt1 p-3 m-3">
        <a href="#" class="d-block">
            <img src="~/img/group.jpg" alt="Option 1" class="img-fluid">
        </a>
    </div>
    <div class="opt2 p-3 m-3">
        <a href="#" class="d-block">
            <img src="~/img/tst1.jpg" alt="Option 2" class="img-fluid">
        </a>
    </div>
    <div class="opt3 p-3 m-3">
        <a href="#" class="d-block">
            <img src="~/img/tst2.jpg" alt="Option 3" class="img-fluid">
        </a>
    </div>
</div>

<style>
    .opt1, .opt2, .opt3 {
        width: 33%;
        height: 50%;
        transition: transform 0.3s; /* Add smooth transition effect */
    }

        .opt1:hover, .opt2:hover, .opt3:hover {
            transform: scale(1.1); /* Increase scale on hover */
        }

        .opt1 img, .opt2 img, .opt3 img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Maintain aspect ratio */
        }
</style>
