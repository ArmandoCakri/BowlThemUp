@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null; // Remove the layout for this page
}
<head>
    <style>
        .content {
            width: 45%;
            height: 80%;
            float: left; /* Float the content to the left */
        }

        .navbar {

            width: 35%;
            float: right; /* Float the navbar to the right */
        }

            .navbar ul {
                background-color: grey;
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .navbar li {
                text-align: center;
                border-bottom: 1px solid white;
            }

                .navbar li a {
                    width: 100%;
                    display: block;
                    color: white;
                    text-decoration: none;
                }

        h1 {
            font-size: 50px;
        }

        body {
            margin-top: 10%;
            height: 90%;
            width: 100%;
            background-image: url("../img/bowl.jpg");
            background-repeat: no-repeat;
            background-size: 100%;
            overflow: hidden; /* Clear floats in the body */
        }
    </style>
</head>
<body>
    <div class="content">
    </div>
    <div class="navbar">
        <ul>
            <li class="navitem">
                <h2><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></h2>
            </li>
            <li class="navitem">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
        </ul>
    </div>
</body>
